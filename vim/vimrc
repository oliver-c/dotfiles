syn on

set nocompatible
set backspace=2

set number
set ruler
set nowrap

set expandtab
set tabstop=3
set shiftwidth=3

set autoindent
set smartindent

call pathogen#infect()

filetype on
filetype plugin on
filetype indent on

autocmd FileType ruby set tabstop=2 shiftwidth=2

set vb t_vb=

set background=dark
colorscheme smyck

set laststatus=2
set encoding=utf-8
